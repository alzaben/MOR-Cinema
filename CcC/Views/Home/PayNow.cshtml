@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Here</title>
    
    <link rel="stylesheet" href="~/css/payment.css">
    <style>
       

        * {
            font-family: 'Josefin Sans', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            min-height: 100vh;
            width: 100%;
            background-color: black;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            width: 500px;
            height: 300px;
            color: #fff;
            cursor: pointer;
        }

        .card-inner {
            width: 100%;
            height: 100%;
            position: relative;
        }

        .front {
            width: 100%;
            height: 100%;
            background-image: linear-gradient(45deg,#0045c7,#ff2c7d);
            position: absolute;
            top: 0;
            left: 0;
            padding: 20px 30px;
            border-radius: 15px;
            overflow: hidden;
            z-index: 1;
        }

        .row {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .map-img {
            width: 100%;
            position: absolute;
            top: 0;
            left: 0;
            opacity: 0.3;
            z-index: -1;
        }

        .card-no {
            font-size: 35px;
            margin-top: 60px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-inner">
                <div class="front">
                    <img src="~/img/map.png" class="map-img" />
                    
                    <div class="row">
                        <img src="~/img/chip.png" width="60px" />
                        <img src="~/img/visa.png" width="80px" />
                    </div>
                    <br>
                    <div class="row">
                        Card Number <input id="cardnumber" type="number" pattern="[0-9]+" maxlength="16" inputmode="numeric">
                    </div>
                    <br>
                    <br>
                    <div class="row">
                        Name <input id="name" type="text" pattern="[0-9]+" maxlength="10" inputmode="numeric">
                    </div>
                    <br>
                    <br>
                    <div class="row">
                        CVV <input id="cvv" type="password" pattern="[0-9]{3,4}" maxlength="4" inputmode="numeric" required>
                    </div>
                    <br>
                    <br>
                    <button asp-action="PaymentDone"  id="saveButton" type="button">Save</button>

                    <script>
                        document.getElementById('saveButton').addEventListener('click', function () {
                            var cardNumberInput = document.getElementById('cardnumber');
                            var nameInput = document.getElementById('name');
                            var cvvInput = document.getElementById('cvv');

                            var cardNumber = cardNumberInput.value;
                            var name = nameInput.value;
                            var cvv = cvvInput.value;

                            if (!/^\d{16}$/.test(cardNumber)) {
                                alert('Please enter a valid card number (16 digits only).');
                                return;
                            }

                            if (!/^\d{3,4}$/.test(cvv)) {
                                alert('Please enter a valid CVV (3 or 4 digits only).');
                                return;
                            }

                            
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
