@model List<Movie>

<h2>Search Results</h2>

@if (Model.Count > 0)
{
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-6" style="padding:10px">

            <div class="trend_2im clearfix position-relative">

                <div class="trend_2im1 clearfix">

                    <div class="grid">

                        <figure class="effect-jazz mb-0">


                            <a href="/Cinema/Index?movieId=@item.MovieId">@item.Name <img src="@Url.Content(item.Img)" style="height:250px;width:300px;border-image:fill " alt="img25"></a>
                            <br />
                            <!-- <a asp-action="Index" asp-controller="Cinema" asp-route-id="@item.MovieId"><img src="@Url.Content(item.Img)" style="height:250px;width:300px;border-image:fill " alt="img25"></a>-->

                        </figure>

                    </div>



                </div>

                <div class="trend_2im2 clearfix text-center position-absolute w-100 top-0">

                    <span class="fs-1"><a class="col_red" href="#"><i class="fa fa-youtube-play"></i></a></span>

                </div>

            </div>

            <div class="trend_2ilast bg_grey p-3 clearfix">

                <h5><a class="col_red" href="#">@item.Name</a></h5>

                <p class="mb-2">A father travels from Oklahoma to France to help his...</p>



                <p class="mb-0">1 Views</p>


            </div>

        </div>
    }
}
else
{
    <p>No results found.</p>
}
