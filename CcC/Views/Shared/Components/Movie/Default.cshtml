                                        </figure>

                                    </div>
                                    <div>
                                            
                                            <a asp-action="MovieDetails" asp-route-id="@item.MovieId" asp-controller="Home"  >Details</a>
                                    </div>
                          

                                </div>

                               

                            </div>

                            <div class="trend_2ilast bg_grey p-3 clearfix">

