@model IEnumerable<Movie>
<style>
    .clamp {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        -webkit-line-clamp: 3; /* Number of lines to display */
    }
</style>
<section id="trend" class="pt-4 pb-5"  >

    <div class="container">

        <div class="row trend_1">

            <div class="col-md-6 col-6">

